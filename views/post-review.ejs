        <% include header-z.ejs %>
        <div class= makeReview style="max-width: 1300px;">
                <div class="container">
                        <form name= reviews action="/test" onsubmit="return validateForm()" method="POST" id="reviewForm" encType="multipart/form-data" >
                                <div id="inner-border">
                        <div class="yourReview"> Your Review</div>

                        <br>
                        <br>

                        <div class="inputBoxes">

                                <span class="holder" >
                                                <input type="text" name="restuarant" placeholder="Restuarant Name:" class="inputTextField" required="">


                                        </span>

                                        <br>
                                        <br>



                                        <span class="holder">
                                                <select id="ratingTag" name="score" class="selectInputTextField">
